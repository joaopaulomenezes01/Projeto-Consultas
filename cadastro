mysql_cursor = mysql_conn.cursor()
mysql_conn2 = mysql.connector.connect(
    host='localhost',
    user='root',
    password='Fafa300967@',
    database='agendamento'
)
mysql_cursor2 = mysql_conn2.cursor()

mysql_cursor.execute('''
CREATE TABLE IF NOT EXISTS usuarios
(id INTEGER PRIMARY KEY AUTOINCREMENT,
    nome TEXT NOT NULL,
    cpf TEXT NOT NULL,
    data_nascimento TEXT NOT NULL,
    email TEXT NOT NULL UNIQUE,
    senha TEXT NOT NULL) 
''')

mysql_cursor2.execute('''
CREATE TABLE IF NOT EXISTS agendamentos
(id integer PRIMARY KEY AUTOINCREMENT, regioes TEXT NOT NULL,
    cidade TEXT NOT NULL,
    especialidade TEXT NOT NULL,
    profissional TEXT NOT NULL,
    horario TEXT NOT NULL,
    data DATE NOT NULL,
    usuario_id INTEGER NOT NULL,
    FOREIGN KEY (usuario_id) REFERENCES usuarios(id))
''') #adc regioes e cidade na tabela de agendamentos
dados = mysql_cursor.fetchall()
dados = mysql_cursor2.fetchall()
mysql_conn.commit()
mysql_conn2.commit()
for linha in dados:
    mysql_cursor.execute('''
    INSERT INTO agendamentos (regioes, cidade, especialidade, profissional, horario, data, usuario_id)
    VALUES (%s, %s, %s, %s, %s, %s, %s)
                     ''', (linha[0], linha[1], linha[2], linha[3], linha[4], linha[5], linha[6]))
    
    mysql_conn2.commit()
    mysql_cursor2.close()
    mysql_conn2.close()

def cadastrar_usuario(nome, cpf, data_nascimento, email, senha):
    try:
        mysql_cursor.execute('''
        INSERT INTO usuarios (nome, cpf, data_nascimento, email, senha)
        VALUES (?, ?, ?, ?, ?)
        ''', (nome, cpf, data_nascimento, email, senha))
        mysql_conn.commit()
        return True
    except mysql.connector.IntegrityError:
        return False
    
def verificar_usuario(email, senha):
    mysql_cursor.execute('''
    SELECT id FROM usuarios WHERE email = ? AND senha = ?
    ''', (email, senha))
    usuario = mysql_cursor.fetchone()
    return usuario[0] if usuario else None #mudei de select tudo (*) pra s√≥ o id pra facilitar j√° que cada um tem id √∫nico
    
